		"build": "tsc && chmod 755 build/index.js",
		"lint": "eslint src/**/*.ts --fix",
		"format": "prettier . --write"
	},
	"license": "MIT",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.11.4",
		"zod": "^3.25.7"
	},
	"devDependencies": {
		"@eslint/js": "^9.27.0",
		"@types/node": "^22.15.19",
		"eslint": "^9.27.0",
		"globals": "^16.1.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.2",
		"prettier": "3.5.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.0"
	},
	"engines": {
		"node": ">=18.19.0"
	},
	"lint-staged": {
		"*.ts": [
			"eslint",
			"prettier --list-different --ignore-unknown"
		]
	}
